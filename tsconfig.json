{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "pages": ["src/pages"],
      "utils": ["src/utils"],
      "components": ["src/components"],
      "additional": ["additional.d.ts"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strictFunctionTypes": true
  },
  "include": ["next-env.d.ts", "src/additional.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
